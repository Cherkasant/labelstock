{
  "name": "labelstock-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "labelstock",
    "labelstock-backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=labelstock-backend\" \"wait-on http://localhost:3000 && npm run dev --workspace=labelstock\"",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  }
}